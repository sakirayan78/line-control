
<link href="~/LineEdit/Content/css/editor.css" rel="stylesheet" />
<script src="~/LineEdit/Content/js/editor.js"></script>

<div class="container-fluid">
    <div class="row">
        <h2 class="demo-text">LineControl MVC Demo</h2>
        <div class="container">
            <div class="row">
                <div class="col-md-12 nopadding">
                    <textarea id="@Model.Id" name="@Model.Id"></textarea>
                </div>
            </div>
        </div>
    </div>
        </div>
<script type="text/javascript">
    $(document).ready( function() {
        @{
            String dd = @Model.content;
        } 


        $("#@Model.Id").Editor();
        $("#@Model.Id").Editor("setText",@dd);
    });
</script>